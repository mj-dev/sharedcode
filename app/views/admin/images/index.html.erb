<p id="notice"><%= notice %></p>

<h1>Liste des images</h1>

<table class="table">
  <thead>
    <tr>
      <th>Path</th>
      <th>Alt</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-striped">
    <% @images.each do |image| %>
      <tr>
        <td><%= image.path %></td>
        <td><%= image.alt %></td>
        <td>
          <%= link_to 'Afficher', admin_image_path(image), class: 'btn btn-success' %>
          <%= link_to 'Modifier', edit_admin_image_path(image), class: 'btn btn-warning' %>
          <%= link_to 'Supprimer', admin_image_path(image),
                      method: :delete,
                      data: {
                          confirm: 'Etes-vous sur de vouloir supprimer cette image ?'
                      },
                      class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

