<p id="notice"><%= notice %></p>

<h1>Liste des utilisateurs</h1>

<table class="table">
  <thead>
    <tr>
      <th>Login</th>
      <th>Password</th>
      <th>Actif</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-striped">
    <% @users.each do |user| %>
      <tr>
        <td><%= user.login %></td>
        <td><%= user.password %></td>
        <td><%= user.active %></td>
        <td><%= user.admin %></td>
        <td>
          <%= link_to 'Modifier', edit_admin_user_path(user), class: 'btn btn-warning' %>
          <%= link_to 'Supprimer', admin_user_path(user),
                      method: :delete,
                      data: {
                          confirm: 'Etes-vous sur de vouloir supprimer cet utilisateur ?'
                      },
                      class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Ajouter un utilisateur', new_admin_user_path, class: 'btn btn-success'%>
