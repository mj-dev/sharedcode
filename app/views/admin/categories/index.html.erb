<p id="notice"><%= notice %></p>

<h1>Liste des Catégories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Nom</th>
      <th>Identifiant de l'image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-striped">
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.image_id %></td>
        <td>
          <%= link_to 'Modifier', edit_admin_category_path(category), class: 'btn btn-warning' %>
          <%= link_to 'Supprimer', admin_category_path(category),
                      method: :delete,
                      data: {
                          confirm: 'Etes-vous sur de vouloir supprimer cette catégorie ?'
                      },
                      class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Créer une catégorie', new_admin_category_path, class: 'btn btn-success' %>
