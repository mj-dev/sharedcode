<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="table">
  <thead>
    <tr>
      <th>Login</th>
      <th>Password</th>
      <th>Active</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.login %></td>
        <td><%= user.password %></td>
        <td><%= user.active %></td>
        <td><%= user.admin %></td>
        <td><%= link_to 'Afficher', user , class: 'btn btn-default' %></td>
        <td><%= link_to 'Modifier', edit_user_path(user), class: 'btn btn-info'  %></td>
        <td><%= link_to 'Supprimer', user, class: 'btn btn-danger', method: :delete, data: { confirm: 'Etes vous sur?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nouvel Utilisateur', new_user_path, class: 'btn btn-success'%>
